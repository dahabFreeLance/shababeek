{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "global-require": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "func-names": "off",
    "no-use-before-define": "off",
    "no-shadow": "off"
  }
}
